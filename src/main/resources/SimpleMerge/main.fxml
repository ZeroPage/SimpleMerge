<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.richtext.InlineCssTextArea?>
<?import SimpleMerge.control.EditPanel?>

<AnchorPane fx:id="root" prefHeight="400" prefWidth="800" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SimpleMerge.Controller">
    <children>
        <ToolBar prefHeight="40.0" prefWidth="800.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <items>
                <Button fx:id="leftMerge" disable="true" mnemonicParsing="false" text="Copy to Left" />
                <Button fx:id="compare" disable="true" mnemonicParsing="false" text="Compare" />
                <Button fx:id="rightMerge" disable="true" mnemonicParsing="false" text="Copy to Right" />
            </items>
        </ToolBar>
        <SplitPane fx:id="splitPane" orientation="HORIZONTAL" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="40">
            <items>
                <EditPanel fx:id="leftTextEditorControl"></EditPanel>
                <EditPanel fx:id="rightTextEditorControl"></EditPanel>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
