<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:id="root" fx:controller="main.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="Open" onAction="#openFile"/>
    <Button fx:id="changeButton" text="Change" onAction="#changeText"/>
    <TextArea fx:id="textArea" GridPane.columnIndex="1">File Content</TextArea>
</GridPane>